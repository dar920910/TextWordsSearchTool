@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "TextWordsSearch";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TextWordsSearch!</h1>
    <form method="post">
        <textarea asp-for="TargetText" cols="30" rows="10">Input a Text</textarea>
        <input asp-for="TargetWord" type="text" />
        <input type="submit" />
    </form>
    <h2>Count = @Model.WordCountInText</h2>
</div>
